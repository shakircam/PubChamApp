<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gradient background matching custom splash screen -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:startColor="#0B1120"
                android:endColor="#004E92"
                android:type="linear" />
        </shape>
    </item>

    <!-- Hexagon logo centered -->
    <item>
        <bitmap
            android:gravity="center"
            android:src="@drawable/launch_foreground" />
    </item>
</layer-list>